<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivRemove"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_remove"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_toLeftOf="@id/ivRemove"
        android:id="@+id/tvCountProductCart"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="30"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_toLeftOf="@id/tvCountProductCart"
        android:id="@+id/tvPriceProductCart"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="200000"
        android:textColor="#f00"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/tvNameProductCart"
        android:layout_toLeftOf="@id/tvPriceProductCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ổ cắm điện đa năng"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_margin="15dp"/>
</RelativeLayout>