<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#415ad6">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b0b3b6">

        <ImageView
            android:id="@+id/ivBackDetail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_left_arrow_black" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <ImageView
                android:id="@+id/ivProductDetail"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <TextView

                    android:id="@+id/tvNameProductDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ổ Cắm Điện Tiện Ích"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/tvDescriptionProductDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dsgfdegfdgfdgtyugyututyutyutyutyutyutyutyutyutyutyutyutyutyutyu"/>
                <TextView
                    android:id="@+id/tvPriceProductDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20.000 VNĐ"
                    android:textColor="#ff7476"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
                <Button
                    android:id="@+id/btnCartDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button_cart" />
            </LinearLayout>
        </LinearLayout>


</LinearLayout>