<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="50dp" android:height="30dp" android:gravity="center">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#a45d39"/>
            <solid android:color="#468fc7"/>
            <padding android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp"/>
        </shape>
    </item>
    <item android:width="20dp" android:height="20dp" android:gravity="center">
        <bitmap android:src="@drawable/xeday"
            xmlns:android="http://schemas.android.com/apk/res/android">
        </bitmap>
    </item>
</layer-list>
